<div style="margin: 100px;">
  <h1>Add New Song to Archive</h1>
  <%= form_with(model: @song, url: songs_path, method: :post) do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :artist_id, class: "form-label" %>
      <%= form.collection_select :artist_id, @artists, :id, :name, { prompt: "-- Select Artist --" }, class: "form-select" %>
    </div>
    <div class="mb-3">
      <%= form.label :genre, class: "form-label" %>
      <%= form.text_field :genre, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :length, class: "form-label" %>
      <%= form.text_field :length, class: "form-control" %>
    </div>
    <div class="d-flex justify-content-center">
      <%= form.submit "Add Song to Archive", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
